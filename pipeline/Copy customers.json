												"type": "String"
											}
										},
										{
											"source": {
												"name": "rowguid",
												"type": "Guid"
											},
											"sink": {
												"name": "rowguid",
												"type": "Guid"
											}
										},
										{
											"source": {
												"name": "ModifiedDate",
												"type": "DateTime"
											},
											"sink": {
												"name": "ModifiedDate",
												"type": "DateTime"
											}
										}
									]
								}
							},
							"inputs": [
								{
									"referenceName": "SourceCustomers",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
