												"type": "String"
											},
											"sink": {
												"name": "Title",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "FirstName",
												"type": "String"
											},
											"sink": {
												"name": "FirstName",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "MiddleName",
												"type": "String"
											},
											"sink": {
												"name": "MiddleName",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "LastName",
												"type": "String"
											},
											"sink": {
												"name": "LastName",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "Suffix",
												"type": "String"
											},
											"sink": {
												"name": "Suffix",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "CompanyName",
												"type": "String"
											},
											"sink": {
												"name": "CompanyName",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "SalesPerson",
												"type": "String"
